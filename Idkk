--// Script Roblox: Brainrot - Menú Lateral Móvil con AutoSteal, Fly y Noclip

local player = game.Players.LocalPlayer

-- [1] BOTÓN FLOTANTE PARA ABRIR/CERRAR MENÚ
local gui = Instance.new("ScreenGui")
gui.Name = "BrainrotMenu"
gui.Parent = game.CoreGui

local openBtn = Instance.new("TextButton")
openBtn.Name = "OpenMenuBtn"
openBtn.Size = UDim2.new(0, 46, 0, 46)
openBtn.Position = UDim2.new(0, 10, 0.5, -23)
openBtn.BackgroundColor3 = Color3.fromRGB(255, 174, 66)
openBtn.TextColor3 = Color3.new(1,1,1)
openBtn.Font = Enum.Font.GothamBlack
openBtn.TextSize = 20
openBtn.Text = "≡"
openBtn.Parent = gui
openBtn.ZIndex = 10
local openUICorner = Instance.new("UICorner", openBtn)
openUICorner.CornerRadius = UDim.new(1, 0)

-- [2] MENÚ LATERAL
local menuFrame = Instance.new("Frame")
menuFrame.Size = UDim2.new(0, 210, 0, 196)
menuFrame.Position = UDim2.new(0, 60, 0.5, -98)
menuFrame.BackgroundColor3 = Color3.fromRGB(30,30,30)
menuFrame.BackgroundTransparency = 0.15
menuFrame.Visible = false
menuFrame.Parent = gui
menuFrame.ZIndex = 9
local menuUICorner = Instance.new("UICorner", menuFrame)
menuUICorner.CornerRadius = UDim.new(0, 13)

menuFrame.Active = true
menuFrame.Draggable = true

openBtn.MouseButton1Click:Connect(function()
    menuFrame.Visible = not menuFrame.Visible
end)

-- [3] BOTONES DEL MENÚ
local y = 18
local function makeBtn(text, color)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1, -24, 0, 38)
    btn.Position = UDim2.new(0, 12, 0, y)
    btn.Text = text
    btn.Font = Enum.Font.Gotham
    btn.TextSize = 16
    btn.BackgroundColor3 = color
    btn.TextColor3 = Color3.new(1,1,1)
    btn.Parent = menuFrame
    btn.AutoButtonColor = true
    btn.ZIndex = 10
    y = y + 46
    return btn
end

-- [4] AUTOSTEAL
local autoStealOn = false

local function findBrain()
    for _,v in pairs(workspace:GetChildren()) do
        if v.Name:lower():find("brain") then
            return v
        end
    end
    return nil
end

local function autoStealLoop()
    while autoStealOn do
        local brain = findBrain()
        if brain and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
            player.Character.HumanoidRootPart.CFrame = CFrame.new(brain.Position + Vector3.new(0,4,0))
        end
        wait(0.5)
    end
end

local stealBtn = makeBtn("AutoSteal Brainrot: OFF", Color3.fromRGB(231, 58, 58))
stealBtn.MouseButton1Click:Connect(function()
    autoStealOn = not autoStealOn
    if autoStealOn then
        stealBtn.Text = "AutoSteal Brainrot: ON"
        stealBtn.BackgroundColor3 = Color3.fromRGB(35, 232, 99)
        spawn(autoStealLoop)
    else
        stealBtn.Text = "AutoSteal Brainrot: OFF"
        stealBtn.BackgroundColor3 = Color3.fromRGB(231, 58, 58)
    end
end)

-- [5] FLY: Flotar en móvil (sube, baja, apaga)
local flyState = 0 -- 0: off, 1: up, 2: down
local flyBtn = makeBtn("Fly: OFF", Color3.fromRGB(120, 200, 255))
local flyBV = nil

local function setFly(state)
    local hrp = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
    if not hrp then return end
    if flyBV then flyBV:Destroy() flyBV = nil end
    if state == 1 then
        flyBV = Instance.new("BodyVelocity")
        flyBV.MaxForce = Vector3.new(0, math.huge, 0)
        flyBV.Velocity = Vector3.new(0, 40, 0)
        flyBV.Parent = hrp
        flyBtn.Text = "Fly: SUBIENDO"
        flyBtn.BackgroundColor3 = Color3.fromRGB(35, 232, 99)
    elseif state == 2 then
        flyBV = Instance.new("BodyVelocity")
        flyBV.MaxForce = Vector3.new(0, math.huge, 0)
        flyBV.Velocity = Vector3.new(0, -40, 0)
        flyBV.Parent = hrp
        flyBtn.Text = "Fly: BAJANDO"
        flyBtn.BackgroundColor3 = Color3.fromRGB(255, 160, 60)
    else
        if flyBV then flyBV:Destroy() flyBV = nil end
        flyBtn.Text = "Fly: OFF"
        flyBtn.BackgroundColor3 = Color3.fromRGB(120, 200, 255)
    end
end

flyBtn.MouseButton1Click:Connect(function()
    flyState = (flyState + 1) % 3 -- 0 -> 1 -> 2 -> 0 ...
    setFly(flyState)
end)

-- [6] NOCLIP
local noclip = false
local noclipBtn = makeBtn("NoClip: OFF", Color3.fromRGB(255, 110, 180))
noclipBtn.MouseButton1Click:Connect(function()
    noclip = not noclip
    if noclip then
        noclipBtn.Text = "NoClip: ON"
        noclipBtn.BackgroundColor3 = Color3.fromRGB(35, 232, 99)
    else
        noclipBtn.Text = "NoClip: OFF"
        noclipBtn.BackgroundColor3 = Color3.fromRGB(255, 110, 180)
    end
end)

game:GetService('RunService').Stepped:Connect(function()
    if noclip and player.Character then
        for _,v in pairs(player.Character:GetDescendants()) do
            if v:IsA("BasePart") then
                v.CanCollide = false
            end
        end
    end
end)

print("Menú lateral Brainrot cargado (AutoSteal, Fly, Noclip).")
