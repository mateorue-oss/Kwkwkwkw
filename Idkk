-- Script Roblox: Menú GUI para Steal a Brainrot con contraseña de acceso

local player = game.Players.LocalPlayer

-- CONFIGURA AQUÍ TU CONTRASEÑA
local PASSWORD = "Senko Hub"

-- GUI para la contraseña
local passGui = Instance.new("ScreenGui")
passGui.Name = "PasswordPrompt"
passGui.Parent = game.CoreGui

local passFrame = Instance.new("Frame")
passFrame.Size = UDim2.new(0, 270, 0, 120)
passFrame.Position = UDim2.new(0.5, -135, 0.5, -60)
passFrame.BackgroundColor3 = Color3.fromRGB(30,30,30)
passFrame.BackgroundTransparency = 0.15
passFrame.Parent = passGui

local passUICorner = Instance.new("UICorner", passFrame)
passUICorner.CornerRadius = UDim.new(0, 12)

local passLabel = Instance.new("TextLabel")
passLabel.Size = UDim2.new(1, 0, 0, 28)
passLabel.Position = UDim2.new(0,0,0,16)
passLabel.BackgroundTransparency = 1
passLabel.Text = "Introduce la contraseña para acceder:"
passLabel.TextColor3 = Color3.new(1,1,1)
passLabel.Font = Enum.Font.GothamBold
passLabel.TextSize = 15
passLabel.Parent = passFrame

local passBox = Instance.new("TextBox")
passBox.Size = UDim2.new(1, -40, 0, 34)
passBox.Position = UDim2.new(0, 20, 0, 52)
passBox.BackgroundColor3 = Color3.fromRGB(50,50,50)
passBox.TextColor3 = Color3.new(1,1,1)
passBox.Font = Enum.Font.Gotham
passBox.TextSize = 18
passBox.PlaceholderText = "Contraseña..."
passBox.Text = ""
passBox.Parent = passFrame

local passBtn = Instance.new("TextButton")
passBtn.Size = UDim2.new(1, -40, 0, 26)
passBtn.Position = UDim2.new(0, 20, 0, 92)
passBtn.BackgroundColor3 = Color3.fromRGB(38, 174, 255)
passBtn.TextColor3 = Color3.new(1,1,1)
passBtn.Font = Enum.Font.GothamBold
passBtn.TextSize = 14
passBtn.Text = "Entrar"
passBtn.Parent = passFrame

local accessGranted = false

passBtn.MouseButton1Click:Connect(function()
    if passBox.Text == PASSWORD then
        accessGranted = true
        passGui:Destroy()
    else
        passBox.Text = ""
        passBox.PlaceholderText = "Contraseña incorrecta"
        passBox.PlaceholderColor3 = Color3.fromRGB(255,70,70)
    end
end)

-- Espera hasta que se ponga la contraseña correcta
repeat wait() until accessGranted

-- Crear GUI principal
local gui = Instance.new("ScreenGui")
gui.Name = "BrainrotMenu"
gui.Parent = game.CoreGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 240, 0, 150)
frame.Position = UDim2.new(0, 50, 0, 120)
frame.BackgroundColor3 = Color3.fromRGB(30,30,30)
frame.BackgroundTransparency = 0.15
frame.Parent = gui

local UICorner = Instance.new("UICorner", frame)
UICorner.CornerRadius = UDim.new(0, 12)

local y = 18
local function makeBtn(text, color)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1, -24, 0, 38)
    btn.Position = UDim2.new(0, 12, 0, y)
    btn.Text = text
    btn.Font = Enum.Font.Gotham
    btn.TextSize = 16
    btn.BackgroundColor3 = color
    btn.TextColor3 = Color3.new(1,1,1)
    btn.Parent = frame
    y = y + 46
    return btn
end

-- AUTOSTEAL (lleva al jugador automáticamente al "Brain")
local autoStealOn = false

local function findBrain()
    for _,v in pairs(workspace:GetChildren()) do
        if v.Name:lower():find("brain") then
            return v
        end
    end
    return nil
end

local function autoStealLoop()
    while autoStealOn do
        local brain = findBrain()
        if brain and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
            player.Character.HumanoidRootPart.CFrame = CFrame.new(brain.Position + Vector3.new(0,4,0))
        end
        wait(1)
    end
end

local stealBtn = makeBtn("AutoSteal Brainrot: OFF", Color3.fromRGB(231, 58, 58))
stealBtn.MouseButton1Click:Connect(function()
    autoStealOn = not autoStealOn
    if autoStealOn then
        stealBtn.Text = "AutoSteal Brainrot: ON"
        stealBtn.BackgroundColor3 = Color3.fromRGB(35, 232, 99)
        spawn(autoStealLoop)
    else
        stealBtn.Text = "AutoSteal Brainrot: OFF"
        stealBtn.BackgroundColor3 = Color3.fromRGB(231, 58, 58)
    end
end)

frame.Active = true
frame.Draggable = true

print("Brainrot AutoSteal menú cargado correctamente con protección de contraseña.")
